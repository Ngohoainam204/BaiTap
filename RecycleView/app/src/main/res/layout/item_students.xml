<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_student_ava"
            android:layout_width="100dp"
            android:layout_height="50dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txt_student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_student_ava"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/img_student_ava"
            android:text="Name" />

        <TextView
            android:id="@+id/txt_student_Sid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_student_name"
            android:layout_alignTop="@id/img_student_ava"
            android:layout_marginStart="0dp"

            android:layout_marginTop="36dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@id/img_student_ava"
            android:text="ID" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>