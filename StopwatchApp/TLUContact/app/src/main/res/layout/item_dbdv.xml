<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#054866"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Ảnh đại diện -->
        <ImageView
            android:id="@+id/imv_dbdv"
            android:layout_width="80dp"
            android:layout_height="73dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Avatar"
            android:scaleType="centerCrop" />

        <!-- Tên -->
        <TextView
            android:id="@+id/txt_name_dbdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imv_dbdv"
            android:layout_marginStart="16dp"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <!-- Số điện thoại -->
        <TextView
            android:id="@+id/txt_phonenumber_dbdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name_dbdv"
            android:layout_toEndOf="@id/imv_dbdv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="PhoneNumber"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Địa chỉ -->
        <TextView
            android:id="@+id/txt_address_dbdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_phonenumber_dbdv"
            android:layout_toEndOf="@id/imv_dbdv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Address"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
